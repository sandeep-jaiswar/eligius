{
  "name": "@eligius/ui",
  "version": "0.0.0",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css",
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/**/*.{ts,tsx} --dts --format esm,cjs --out-dir dist --clean && npm run build:css",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "check-types": "tsc --noEmit",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@eligius/eslint-config": "workspace:*",
    "@eligius/tailwind-config": "workspace:*",
    "@eligius/typescript-config": "workspace:*",
    "@types/react": "^19.0.12",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.23.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.4.0",
    "typescript": "5.0.3"
  },
  "dependencies": {
    "@types/react-dom": "^19.0.4",
    "clsx": "^2.1.1"
  }
}